# Handle the fact that this file will be used with multiple OSs
platform=`uname`
if [[ $platform == 'Linux' ]]; then
  alias a='ls -lrth --color'
elif [[ $platform == 'Darwin' ]]; then
  alias a='ls -lrthG'
fi

alias -g G='| grep'
alias -g L='| less'
alias -g M='| more'
alias ali='vim ~/.dotfiles/zsh/aliases'
alias aliases='vim ~/.dotfiles/zsh/aliases'
alias amend="git commit --amend"
alias c='code .'
alias cat='bat'
alias cc='cd ~/codebase'
alias ccc='cd ~/codebase && code .'
alias cw='cd ~/work && code .'
alias d='cd ~/.dotfiles'
alias dc='cd ~/DadeCore'
alias dd='dka && docker-sync start && docker-compose up'
alias dk='docker container kill $(docker ps -q)'
alias dka='docker container kill $(docker ps -q); docker system prune -a -f --volumes'
alias drmi='docker rmi $(docker images -a -q)'
alias gad='git add --all .'
alias gad='git add .'
alias gb='git branch'
alias gc='git commit'
alias gca='git commit -a'
alias gcd='git checkout development'
alias gcl='git clone'
alias gcm="git commit -m"
alias gcm='git commit -m '
alias gco='git checkout'
alias gcod='git checkout development'
alias gd='git diff'
alias gg='git lg'
alias git=hub
alias gp='git push --set-upstream origin'
alias gpf='git push --force'
alias gpo='git push --set-upstream origin'
