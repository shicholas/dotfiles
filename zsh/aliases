alias pull='git pull origin'
alias repush="gpr && git push"
alias so='source ~/.dotfiles/zsh/aliases'
alias sshc='ssh-add -D; ssh-add ~/.ssh/id_rsa'
alias sshn='ssh-add -D; ssh-add ~/.ssh/neon'
alias sqlp='docker run -v ~/neon-law-production.credentials.json:/config -p 127.0.0.1:5432:5432 gcr.io/cloudsql-docker/gce-proxy:1.17 /cloud_sql_proxy -instances=neon-law-production:us-west4:neon-law=tcp:0.0.0.0:5432 -credential_file=/config'
